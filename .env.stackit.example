# STACKIT MongoDB Configuration Template
# Copy this file to .env and fill in your STACKIT MongoDB details

# STACKIT MongoDB Connection
# Replace with your actual STACKIT MongoDB connection string
MONGO_URL=mongodb+srv://your-username:your-password@your-cluster.stackit.cloud/your-database?retryWrites=true&w=majority&authSource=admin

# Database name (usually matches the one in the URL)
MONGO_DATABASE=your_database_name

# Authentication (may be embedded in URL above)
# MONGO_USERNAME=your_stackit_username
# MONGO_PASSWORD=your_stackit_password

# Migration Settings
MIGRATIONS_PATH=./migrations
MIGRATIONS_COLLECTION=schema_migrations

# SSL/TLS Settings (required for STACKIT)
MONGO_SSL_ENABLED=true
MONGO_SSL_INSECURE=false

# Connection Settings (optimized for cloud)
MONGO_TIMEOUT=60
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_MAX_IDLE_TIME=600

# STACKIT-specific connection parameters (add to MONGO_URL if needed)
# Common STACKIT URL parameters:
# - retryWrites=true
# - w=majority
# - authSource=admin
# - maxPoolSize=10
# - minPoolSize=2
# - maxIdleTimeMS=600000
# - serverSelectionTimeoutMS=60000
# - connectTimeoutMS=60000
# - socketTimeoutMS=0

# Example full STACKIT URL format:
# MONGO_URL=mongodb+srv://username:password@cluster.stackit.cloud/database?retryWrites=true&w=majority&authSource=admin&maxPoolSize=10&minPoolSize=2&maxIdleTimeMS=600000&serverSelectionTimeoutMS=60000