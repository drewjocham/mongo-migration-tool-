# MongoDB Configuration
# For local development
MONGO_URL=mongodb://localhost:27017
# For STACKIT cloud provider (example)
# MONGO_URL=mongodb+srv://username:password@cluster.stackit.cloud/database?retryWrites=true&w=majority

MONGO_DATABASE=your_database_name

# MongoDB Authentication (required for STACKIT)
MONGO_USERNAME=your_stackit_username
MONGO_PASSWORD=your_stackit_password

# Migration Settings
MIGRATIONS_PATH=./migrations
MIGRATIONS_COLLECTION=schema_migrations

# SSL/TLS Settings (required for STACKIT cloud)
MONGO_SSL_ENABLED=true
MONGO_SSL_INSECURE=false
MONGO_SSL_CERT_PATH=
MONGO_SSL_KEY_PATH=
MONGO_SSL_CA_CERT_PATH=

# Connection Settings (increased timeout for cloud provider)
MONGO_TIMEOUT=60

# STACKIT-specific settings
# Connection pool settings for cloud deployment
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=1
MONGO_MAX_IDLE_TIME=300

# AI Analysis Configuration
AI_ENABLED=true
AI_PROVIDER=openai  # Options: openai, gemini, claude

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # Options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash  # Options: gemini-1.5-flash, gemini-1.5-pro

# Claude Configuration (Coming Soon)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Google Docs Integration
GOOGLE_DOCS_ENABLED=false
# Path to Google service account JSON file
GOOGLE_CREDENTIALS_PATH=./google-credentials.json
# Or provide credentials as JSON string
# GOOGLE_CREDENTIALS_JSON='{"type":"service_account",...}'
# Optional: Google Drive folder ID to store reports
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
# Optional: Email to automatically share reports with
GOOGLE_DOCS_SHARE_WITH_EMAIL=team@example.com